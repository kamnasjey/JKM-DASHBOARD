// Prisma schema for JKM Dashboard auth
// Production: PostgreSQL (Vercel Postgres / Supabase / Neon)
// Local dev: Can use SQLite by setting DATABASE_URL="file:./dev.db"

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String?  @unique
  phone        String?  @unique
  name         String?
  image        String?
  provider     String   @default("email") // "email" | "google" | "phone"
  passwordHash String?

  // Billing / access control (MVP)
  hasPaidAccess        Boolean  @default(false)
  stripeCustomerId     String?  @unique
  stripeCheckoutId     String?  @unique
  paidAt              DateTime?

  // Manual billing (bank transfer/QPay) - admin approves
  manualPaymentStatus      String   @default("none") // none | pending | approved | rejected
  manualPaymentPlan        String?
  manualPaymentPayerEmail  String?
  manualPaymentTxnRef      String?
  manualPaymentNote        String?
  manualPaymentRequestedAt DateTime?
  manualPaymentReviewedAt  DateTime?
  manualPaymentReviewedBy  String?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model OtpChallenge {
  id        String   @id @default(cuid())
  phone     String
  otpHash   String
  expiresAt DateTime
  attempts  Int      @default(0)
  createdAt DateTime @default(now())

  @@index([phone])
}
